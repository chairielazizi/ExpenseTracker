@model ExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Create";
    ViewData["PageTitle"] = Model.CategoryId == 0 ? "Create a new category" : "Edit category";

}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			    <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId"/>
                <div class="mb-3">
                    @* <label asp-for="TransactionType" class="control-label"></label> *@
                    @* <input asp-for="TransactionType" class="form-control" /> *@
                    <ejs-radiobutton id="radio1" label="Expense" name="TransactionType" value="Expense" checked="@(Model.TransactionType=="Expense")"></ejs-radiobutton>
                    <ejs-radiobutton id="radio2" label="Income" name="TransactionType" value="Income" checked="@(Model.TransactionType=="Income")"></ejs-radiobutton>
                    <span asp-validation-for="TransactionType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="title" placeholder="Title" ejs-for="@Model.Title" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @* <label asp-for="Icon" class="control-label"></label> *@
                    @* <input asp-for="Icon" class="form-control" /> *@
                    <ejs-textbox id="icon" placeholder="Icon" ejs-for="@Model.Icon" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            
                <div class="form-group">
                    <ejs-button id="submit" cssClass="e-success" type="submit" content="Submit"></ejs-button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-icons fa-2xl"></i>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
