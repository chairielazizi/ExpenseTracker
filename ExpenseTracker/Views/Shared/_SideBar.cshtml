@{
	List<Object> menuItems = new List<Object>();

	menuItems.Add(new { text = "Main", separator = true });
	menuItems.Add(new {
		text = "Dashboard", iconCss = "fa-solid fa-home", url = "/Dashboard/Index",
	});
	menuItems.Add(new { text = "Operations", separator = true });
	menuItems.Add(new {
		text = "Categories", iconCss = "fa-solid fa-list", url = "/Category/Index",
		items = new List<Object> {
			new { text = "Add Category", iconCss = "fa-solid fa-plus", url = "/Category/AddOrEdit" }
		}
	});
	menuItems.Add(new {
		text = "Transactions", iconCss = "fa-solid fa-money-bill-wave", url = "/Transaction/Index",
		items = new List<Object> {
			new { text = "Add Transaction", iconCss = "fa-solid fa-plus", url = "/Transaction/AddOrEdit" }
		}
	});
}

<ejs-sidebar id="sidebar" width="250px" enableDock dockSize="100px" target=".dock-target">
	<e-content-template>
		<div class="logo-wrapper">
			<div class="app-logo">
				<img src="~/logo.png" />
			</div>
			<div class="w-100"></div>
			<i id="sidebar-toggler" class="fa-solid fa-angles-left"></i>
		</div>

		<div class="profile-wrapper">
			<img class="profile-pic" src="~/riel2.png" />
			<div class="d-flex flex-column ps-3 titles">
				<h6 class="mb-0">Expense Tracker</h6>
				<span class="text-grey-50">Airiel's World</span>
			</div>
		</div>

		<ejs-menu id="menu" items="menuItems" orientation="Vertical" hamburgerMode="true">

		</ejs-menu>
	</e-content-template>
</ejs-sidebar>

<script>
	document.getElementById('sidebar-toggler').addEventListener('click', function () {
		var sidebar = document.getElementById('sidebar').ej2_instances[0];
		sidebar.toggle();
	});
</script>
